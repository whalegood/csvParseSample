<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>kr.dja</groupId>
  <artifactId>csvParseSample</artifactId>
  <version>1.0</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven-compiler.version}</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${maven-jar.version}</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>kr.dja.csvParseSample.CSVParseSampleCore</mainClass>
              <addClasspath>true</addClasspath>
              <addExtensions>true</addExtensions>
              <packageName>kr.dja.csvParseSample</packageName>
            </manifest>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>openstreetmap</id>
      <url>https://josm.openstreetmap.de/nexus/content/repositories/releases/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <version>1.18.12</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-resources-plugin</artifactId>
      <version>3.2.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <hibernate.version>5.4.21.Final</hibernate.version>
    <netty.version>4.1.45.Final</netty.version>
    <java.version>11</java.version>
    <mockito.version>1.10.19</mockito.version>
    <reflections.version>0.9.12</reflections.version>
    <encoding>UTF-8</encoding>
    <maven-shade.version>3.2.4</maven-shade.version>
    <maven-compiler.version>3.8.1</maven-compiler.version>
    <maven-jar.version>3.2.0</maven-jar.version>
    <maven-resources.version>3.2.0</maven-resources.version>
    <lombok.version>1.18.12</lombok.version>
    <opencsv.version>5.2</opencsv.version>
    <junit-jupiter.version>5.5.2</junit-jupiter.version>
    <jmapviewer.version>2.14</jmapviewer.version>
    <gson.version>2.7</gson.version>
    <log4j.version>2.13.3</log4j.version>
    <junit.version>4.12</junit.version>
    <skipTests>true</skipTests>
  </properties>
</project>
